{
  "name": "webgpu-instanced-lines",
  "version": "0.1.0",
  "description": "GPU-accelerated line rendering for WebGPU with joins and caps",
  "type": "module",
  "main": "dist/webgpu-instanced-lines.esm.js",
  "module": "dist/webgpu-instanced-lines.esm.js",
  "browser": "dist/webgpu-instanced-lines.umd.min.js",
  "exports": {
    ".": {
      "import": "./dist/webgpu-instanced-lines.esm.js",
      "require": "./dist/webgpu-instanced-lines.umd.min.js",
      "default": "./dist/webgpu-instanced-lines.esm.js"
    }
  },
  "files": [
    "dist",
    "webgpu-instanced-lines.js"
  ],
  "scripts": {
    "dist:clean": "rm -rf dist",
    "build:all": "npm run test && npm run build && npm run examples:build && npm run docs:build",
    "build": "rollup -c build/rollup.config.js",
    "examples:build": "node build/build-examples.js",
    "prepublishOnly": "npm run build",
    "test": "node test/run-tests.js",
    "test:update": "node test/run-tests.js --update",
    "docs:preview": "vite -c build/vite.config.js",
    "docs:build": "vite build -c build/vite.config.js",
    "docs:clean": "rm -rf docs"
  },
  "keywords": [
    "webgpu",
    "lines",
    "rendering",
    "graphics",
    "gpu"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@observablehq/notebook-kit": "^1.5.1",
    "@rollup/plugin-terser": "^0.4.4",
    "@rreusser/mcp-observable-notebookkit-debug": "file:../mcp-observable-notebookkit-debug",
    "pixelmatch": "^7.1.0",
    "pngjs": "^7.0.0",
    "rollup": "^4.9.0",
    "vite": "^6.0.0",
    "webgpu": "^0.3.8"
  }
}
