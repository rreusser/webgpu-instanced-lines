{
  "name": "webgpu-instanced-lines",
  "version": "0.1.0",
  "description": "GPU-accelerated line rendering for WebGPU with joins and caps",
  "type": "module",
  "main": "dist/webgpu-instanced-lines.esm.js",
  "module": "dist/webgpu-instanced-lines.esm.js",
  "browser": "dist/webgpu-instanced-lines.umd.min.js",
  "types": "dist/webgpu-instanced-lines.d.ts",
  "exports": {
    ".": {
      "types": "./dist/webgpu-instanced-lines.d.ts",
      "import": "./dist/webgpu-instanced-lines.esm.js",
      "require": "./dist/webgpu-instanced-lines.umd.min.js",
      "default": "./dist/webgpu-instanced-lines.esm.js"
    }
  },
  "files": [
    "dist",
    "webgpu-instanced-lines.ts",
    "*.md"
  ],
  "scripts": {
    "build": "npm run lint && npm run test && npm run dist:build && npm run docs:build",
    "clean": "npm run dist:clean && npm run docs:clean",
    "lint": "eslint -c build/eslint.config.js webgpu-instanced-lines.ts && npm run lint:examples",
    "lint:examples": "tsc -p build/tsconfig.examples.json --noEmit",
    "dist:build": "rollup -c build/rollup.config.js",
    "dist:clean": "rm -rf dist",
    "examples:build": "node build/build-examples.js",
    "prepublishOnly": "npm run test && npm run dist:build",
    "test": "node test/run-tests.js",
    "test:update": "node test/run-tests.js --update",
    "docs:preview": "vite -c build/vite.config.js",
    "docs:build": "vite build -c build/vite.config.js && npm run examples:build",
    "docs:deploy": "npm run docs:build && gh-pages -d _site",
    "docs:clean": "rm -rf _site"
  },
  "keywords": [
    "webgpu",
    "lines",
    "rendering",
    "graphics",
    "gpu"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@observablehq/notebook-kit": "^1.5.1",
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^12.3.0",
    "@rreusser/mcp-observable-notebookkit-debug": "file:../mcp-observable-notebookkit-debug",
    "@webgpu/types": "^0.1.69",
    "eslint": "^9.39.2",
    "gh-pages": "^6.3.0",
    "gl-matrix": "^3.4.4",
    "pixelmatch": "^7.1.0",
    "pngjs": "^7.0.0",
    "rollup": "^4.9.0",
    "tslib": "^2.8.1",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.53.0",
    "vite": "^6.0.0",
    "webgpu": "^0.3.8"
  }
}
